---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

interface Props {
  className?: string;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { className = '' } = Astro.props;
---

<footer class={`bg-white border-t border-gray-200 py-6 px-4 ${className}`}>
  <div class="max-w-md mx-auto">
    <div class="text-center space-y-4">
      <!-- Main logo/title -->
      <div class="flex items-center justify-center space-x-2">
        <span class="text-xl">üöó</span>
        <span class="text-sm font-medium text-gray-800">{t('header.title')}</span>
      </div>
      
      <!-- Links -->
      <div class="flex items-center justify-center space-x-6 text-sm">
        <a href={lang === 'en' ? '/en/main' : '/main'} class="text-gray-600 hover:text-gray-800 transition-colors">
          üè† {t('footer.homepage')}
        </a>
        <a href={lang === 'en' ? '/en/qr-generator' : '/qr-generator'} class="text-gray-600 hover:text-gray-800 transition-colors">
          üì± {t('footer.qr.generator')}
        </a>
      </div>
      
      <!-- Description -->
      <p class="text-xs text-gray-500 max-w-xs mx-auto leading-relaxed">
        {t('footer.description')}
      </p>
      
      <!-- Built with Astro -->
      <div class="flex items-center justify-center space-x-2">
        <span class="text-xs text-gray-400">Built with</span>
        <a 
          href="https://astro.build" 
          target="_blank" 
          rel="noopener noreferrer"
          class="flex items-center space-x-1 text-xs text-gray-600 hover:text-gray-800 transition-colors group"
        >
          <svg class="w-4 h-4 group-hover:scale-110 transition-transform" viewBox="0 0 256 366" fill="none">
            <path d="M182.022 9.147c2.982 3.702 4.502 8.697 7.543 18.687L256 246.074a276.467 276.467 0 0 0-79.426-26.891L133.318 73.008a5.63 5.63 0 0 0-10.802.017L79.784 219.11A276.453 276.453 0 0 0 0 246.04L66.76 27.783c3.051-9.972 4.577-14.959 7.559-18.657a24.541 24.541 0 0 1 9.946-7.358C88.67 0 93.885 0 104.314 0h47.683c10.443 0 15.664 0 20.074 1.774a24.545 24.545 0 0 1 9.95 7.373Z" fill="#FF5D01"/>
            <path d="M189.972 256.46c-10.952 9.364-32.812 15.751-57.992 15.751-30.904 0-56.807-9.621-63.68-22.56-2.458 7.415-3.009 15.903 0 21.8 7.677 15.022 38.035 27.355 75.19 27.355 36.114 0 65.834-11.459 74.11-26.18 2.458-4.48 2.458-8.96 0-15.751-5.059-14.038-20.592-25.172-40.723-31.627-8.6-2.756-15.118-5.513-23.718-7.415 11.549 5.026 25.856 10.066 36.813 38.627Z" fill="url(#astro-a)"/>
            <path d="M256 246.074c0 9.946-24.789 25.355-72.75 25.355-47.114 0-71.693-15.266-71.693-25.355s24.58-25.355 71.693-25.355C231.211 220.719 256 236.128 256 246.074Z" fill="url(#astro-b)"/>
            <defs>
              <linearGradient id="astro-a" x1="128" y1="0%" x2="128" y2="100%">
                <stop stop-color="#FF1639"/>
                <stop offset="1" stop-color="#FF1639" stop-opacity="0"/>
              </linearGradient>
              <linearGradient id="astro-b" x1="128" y1="0%" x2="128" y2="100%">
                <stop stop-color="#FF1639"/>
                <stop offset="1" stop-color="#FF1639" stop-opacity="0"/>
              </linearGradient>
            </defs>
          </svg>
          <span class="font-medium">Astro</span>
        </a>
      </div>
      
      <!-- Copyright -->
      <div class="pt-2 border-t border-gray-100 space-y-2">
        <p class="text-xs text-gray-400">
          {t('footer.copyright')}
        </p>
        
        <!-- Version Info -->
        <div class="flex items-center justify-center space-x-1">
          <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full font-mono">
            v1.0.0+RC
          </span>
        </div>
        
        <div class="flex items-center justify-center space-x-1">
          <span class="text-xs text-gray-400">{t('footer.created.by')}</span>
          <a 
            href="https://github.com/gurkanfikretgunak" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-xs text-gray-600 hover:text-gray-800 transition-colors flex items-center space-x-1"
          >
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <span>@gurkanfikretgunak</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
